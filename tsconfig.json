{
	"compilerOptions": {
		"target": "es6", // Генерировать ES6 код
		"module": "esnext", // Использовать современную систему модулей
		"moduleResolution": "node", // Разрешение модулей как в Node.js
		"jsx": "react-jsx", // Режим JSX для React
		"strict": true, // Включить все строгие проверки типов
		"esModuleInterop": true, // Улучшенная совместимость с CommonJS
		"skipLibCheck": true, // Пропускать проверку типов в .d.ts файлах
		"forceConsistentCasingInFileNames": true, // Проверка регистра имен файлов
		"resolveJsonModule": true, // Разрешить импорт JSON
		"outDir": "./dist/", // Папка для скомпилированных файлов
		"baseUrl": "./src", // Базовый путь для абсолютных импортов
		"paths": {
			"@components/*": ["components/*"] // Алиасы для путей
		}
	},
	"include": ["src/**/*"] // Включать все файлы в src
}
